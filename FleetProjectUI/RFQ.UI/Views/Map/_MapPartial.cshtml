<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<div>
    <!-- Search Box -->
    <input id="search-box" type="text" placeholder="Search location..." class="form-control mb-2" />

    <!-- Map Container -->
    <div id="map" style="height: 400px; width: 100%; position: relative;"></div>

    <!-- Lat, Lng, State Display -->
    <div style="margin-top:10px;">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group mb-2">
                    <label for="latitude">Latitude:</label>
                    <input type="text" id="latitude" readonly class="form-control mb-1" />
                </div>

                <div class="form-group mb-2">
                    <label for="longitude">Longitude:</label>
                    <input type="text" id="longitude" readonly class="form-control mb-1" />
                </div>

                <div class="form-group mb-2">
                    <label for="state">State:</label>
                    <input type="text" id="state" readonly class="form-control mb-1" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map.js script -->
<script src="~/js/Map.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOVYRIgupAurZup5y1PRh8Ismb1A3lLao&libraries=places&callback=initMap" async defer></script>



