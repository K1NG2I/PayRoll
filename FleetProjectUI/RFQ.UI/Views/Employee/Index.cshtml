@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Employee";
}

@section Scripts {
    <script src="~/js/Views/ContactPersonDetails.js?v=1.1"></script>
    <script src="~/js/Views/Employee.js"></script>
}


<!-- ================= LIST SECTION ================= -->
<div id="employeeListSection">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <div class="col-md-6">
                    <h1 class="page-title">Employee</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card com-profile-info">

                <!-- Top Header -->
                <div class="table-top-header">
                    <h4>List of Employee</h4>
                    <div class="d-flex gap-2">
                        <div class="table-search-box">
                            <!-- IMPORTANT: FetchDataForTable listens to this ID -->
                            <input type="text"
                                   id="tableuserSearch"
                                   class="form-control form-control-sm"
                                   placeholder="Search..." />
                            <button type="submit">
                                <i class="ri-search-line"></i>
                            </button>
                        </div>
                        <div id="exportButtons" class="btn-group" role="group"></div>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table id="GridListTable" class="table dt-responsive nowrap w-100">
                        <thead class="text-center"></thead>
                        <tbody class="text-center" id="tableBody"></tbody>
                    </table>
                </div>

                <!-- Bottom Area -->
                <div class="datatable-footer-bottom">
                    <div class="totle-left">
                        <span id="totalList"></span>
                    </div>

                    <div id="customPagination"
                         class="dataTables_paginate paging_simple_numbers"></div>

                    <input type="hidden" id="currentPage" value="1" />

                    <div class="show-page">
                        <span>Show per page:</span>
                        <select id="pageLength" class="form-select">
                            <option value="5">5</option>
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                            <option value="-1">All</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- ================= FORM SECTION ================= -->
<!-- ================= FORM SECTION ================= -->
<div id="employeeFormSection" style="display:none;">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box add">
                <h1 class="page-title">Edit Employee</h1>
                <div class="add-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#" onclick="$('#employeeFormSection').hide();$('#employeeListSection').show();">
                                    Employee
                                </a>
                            </li>
                            <li class="breadcrumb-item active">Edit Employee</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABS ================= -->
    <ul class="nav nav-tabs mb-3" id="employeeTabs">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#employeeDetailsTab">
                Employee Details
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#contactPersonTab">
                Contact Persons
            </a>
        </li>
    </ul>

    <div class="tab-content">

        <!-- ================= EMPLOYEE DETAILS TAB ================= -->
        <div class="tab-pane fade show active" id="employeeDetailsTab">

            <div class="card com-profile-info">
                <div class="top-details">
                    <h2 class="page-form-title">Employee Details</h2>

                    <form class="row all-custom-class" id="employeeForm">
                        <input type="hidden" id="hdnEmployeeId" />

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Full Name</label>
                                <input type="text" id="txtFullName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Contact Number</label>
                                <input type="text" id="txtContactNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Aadhaar Number</label>
                                <input type="text" id="txtAadhaarNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">PAN Number</label>
                                <input type="text" id="txtPanNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Salary</label>
                                <input type="number" id="txtSalary" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Hire Date</label>
                                <input type="date" id="txtHireDate" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Status</label>
                                <select id="ddlStatus" class="form-control">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="button-main">
                    <a href="#" class="card-link" id="btnUpdateEmployee">
                        <i class="ri-save-line"></i>
                        <span>Update</span>
                    </a>

                    <a href="#" class="card-link" id="btnCancelEmployee">
                        <i class="ri-close-line"></i>
                        <span>Cancel</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- ================= CONTACT PERSON TAB ================= -->
        <div class="tab-pane fade" id="contactPersonTab">

            <div class="card com-profile-info">

                <div class="table-top-header">
                    <h4>Contact Persons</h4>
                    <div class="add-btn">
                        <a href="#" id="btnAddContactPerson">
                            <i class="ri-add-line"></i> Add
                        </a>
                    </div>
                </div>

                <!-- CONTACT PERSON LIST -->
                <div id="contactPersonListSection">
                    <div class="table-responsive">
                        <table class="table table-bordered w-100">
                            <thead class="text-center">
                                <tr>
                                    <th>Relation</th>
                                    <th>Name</th>
                                    <th>Aadhaar</th>
                                    <th>PAN</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="contactPersonTableBody" class="text-center">
                                <!-- filled by JS -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- CONTACT PERSON FORM -->
                <div id="contactPersonFormSection" style="display:none;">
                    <form class="row all-custom-class">

                        <input type="hidden" id="hdnContactPersonDetailId" />

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Relation</label>
                                <input type="text" id="txtRelation" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Name</label>
                                <input type="text" id="txtContactPersonName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Aadhaar</label>
                                <input type="text" id="txtContactAadhaar" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">PAN</label>
                                <input type="text" id="txtContactPan" class="form-control" />
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Status</label>
                                <select id="ddlContactStatus" class="form-control">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12 mt-3">
                            <a href="#" class="card-link" id="btnSaveContactPerson">
                                <i class="ri-save-line"></i> Save
                            </a>
                            <a href="#" class="card-link" id="btnCancelContactPerson">
                                <i class="ri-close-line"></i> Cancel
                            </a>
                        </div>

                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
