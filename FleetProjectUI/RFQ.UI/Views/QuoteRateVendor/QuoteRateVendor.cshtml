@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    ViewData["Title"] = "QuoteRate-Vendor";
}
<style>

    .success-card {
        border-left: 5px solid #28a745;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease-in-out;
        animation: fadeIn 0.5s ease-out;
    }

    .success-icon {
        font-size: 2rem;
        color: #28a745;
    }
</style>

<head>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">

    <!-- Bootstrap (CDN - single source) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="~/css/remixicon.css" rel="stylesheet" type="text/css" />

    <!-- Plugins -->
    <link href="~/css/intlTelInput-largeFlags.css" rel="stylesheet" type="text/css" />
    <link href="~/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/select2-bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- App Style -->
    <link href="~/css/app-style.css" rel="stylesheet" type="text/css" />
</head>

<div class="container">
    <div class="col-12" id="formDiv">
        <div class="page-title-box add">
            <h1 class="page-title">Quote Rate - Vendor </h1>
        </div>

        <div id="AddQuoteRoleVendorDiv" class="card com-profile-info">
            <div class="top-details">
                <form class="row all-custom-class" id="QRVendorBodyForm" method="post">
                    <input type="hidden" id="rfqrateId" />
                    <div class="row all-custom-class">
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">RFQ NO </label>
                                <input disabled type="text" class="form-control" placeholder="RFQ No" id="txtRFQNo" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">RFQ Date</label>
                                <input disabled type="text" class="form-control" placeholder="RFQ Date" id="txtRFQDate" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">RFQ Expire On</label>
                                <input disabled type="text" class="form-control" placeholder="Expire On" id="txtExpireOn" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">Vehicle Req On</label>
                                <input disabled type="text" class="form-control" placeholder="Vehicle Req On" id="txtVehicleReqOn" />
                            </div>
                        </div>
                        <input type="hidden" id="RfqId" name="RfqId">
                        <input type="hidden" id="vendorId" name="vendorId">
                        @* <div class="col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Vendor Name</label>
                                <input disabled class="form-control" placeholder="Vendor Name" id="txtVednorName" style="width: 100%;">

                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">PAN No </label>
                                <input disabled type="text" class="form-control" placeholder="PAN No" id="txtPANNo" />
                            </div>
                        </div> *@
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label ">Origin/From</label>
                                <input disabled class="form-control" id="ddlOrigin" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">Destination/To</label>
                                <input disabled class="form-control" id="ddlDestination" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label ">Vehicle Type</label>
                                <input disabled class="form-control" id="ddlVehicleType" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">No.of Vehicles Req</label>
                                <input disabled type="text" class="form-control" placeholder="No.of Vehicles" id="txtNoOfVehicles" />
                            </div>
                        </div>
                        @*    <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">Item Name</label>
                                <input disabled class="form-control" id="ddlItemName" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">Packing Type</label>
                                <input disabled class="form-control" id="ddlPackingType" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Special Instructions </label>
                                <input disabled type="text" class="form-control" placeholder="Special Instructions" id="txtInstruction" />
                            </div>
                        </div> *@
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label"><span>*</span>Available Vehicle Count</label>
                                <input type="text" class="form-control" placeholder="Available Vehicle Count" id="txtAvailableVehicle" maxlength="5" onkeypress="return isNumber(event)" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label"><span>*</span>Total Hire Cost</label>
                                <input type="text" class="form-control" placeholder="Total Hire Cost" id="txtHireCost" maxlength="8" onkeypress="return isNumber(event)" />
                            </div>
                        </div>
                        <div class="col-lg-3">t 
                            <div class="item-input">
                                <label class="form-label"><span>*</span>Detention Per Day</label>
                                <input type="text" class="form-control" placeholder="Detention Per Day" id="txtDetentionDay" maxlength="5" onkeypress="return isNumber(event)" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label"><span>*</span>Detention Free Days</label>
                                <input type="text" class="form-control" placeholder="Detention Free Days" id="txtDetentionDays" maxlength="3" onkeypress="return isNumber(event)" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="button-main">
                <a href="#" class="card-link" id="btnSaveForm" type="button" data-action="save">
                    <i class="ri-save-line"></i>
                    <span>
                        Save
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Top-centered success card -->

<div class="d-flex justify-content-center mt-4" style="position: fixed; top: 20px; left: 0; right: 0; z-index: 1050;">
    <div class="col-sm-6">
        <div class="card success-card d-none" id="successCard">
            <div class="card-body d-flex align-items-center">
                <div class="success-icon me-3">✅</div>
                <div>
                    <h5 class="card-title mb-1">Thank You!</h5>
                    <p class="card-text mb-0">Your Quote Rate submitted successfully.</p>
                </div>
            </div>
        </div>
    </div>
</div>


