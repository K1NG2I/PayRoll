@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Driver";

}
@section Scripts {
    <script src="~/js/views/driver.js"></script>
    <script src="~/js/AttachmentDetails.js"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOyN2BYpLwazCPCHihlFTLrZ5H_MNizrc&callback=initMap&libraries=places">
    </script>

}
<div id="tableDiv">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box add">
                <h1 class="page-title">Driver</h1>

                <div class="add-btn">
                    <a href="#" id="btnAdd">
                        <i class="ri-add-line"></i> <span>Add</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card com-profile-info">
                <!-- Top Header -->
                <div class="table-top-header">
                    <h4>List of Driver</h4>
                    <div class="d-flex gap-2">
                        <div class="table-search-box">
                            <input type="text" id="driverTableSearch" class="form-control form-control-sm" placeholder="Search...">
                            <button type="submit"><i class="ri-search-line"></i></button>
                        </div>
                        <div id="exportButtons" class="btn-group" role="group"></div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="GridListTable" class="table dt-responsive nowrap w-100">
                        <thead class="text-center"></thead>
                        <tbody class="text-center" id="tableBody"></tbody>
                    </table>
                </div>


                <!-- Table -->
                @* <div class="table-responsive"> *@
                @*     <table id="driverTable" class="table dt-responsive nowrap w-100"> *@
                @*         <thead> *@
                @*             <tr class="text-center"> *@
                @*                 <th class="no-sort text-center ">Driver Photo</th> *@
                @*                 <th class="sortable text-center" data-column="LicenseNo" data-order="asc">License No</th> *@
                @*                 <th class="sortable text-center" data-column="DriverName" data-order="asc">Driver Name</th> *@
                @*                 <th class="text-center no-sort">Driver Type</th> *@
                @*                 <th class="sortable text-center" data-column="MobNo" data-order="asc">Mobile Number</th> *@
                @*                 <th class="text-center no-sort">Action</th> *@
                @*             </tr> *@
                @*         </thead> *@
                @*         <tbody class="text-center"></tbody> <!-- This will be dynamically filled --> *@
                @*     </table> *@
                @* </div> *@

                <!-- Bottom Area -->
                <div class="datatable-footer-bottom">
                    <div class="totle-left">
                        <span id="totalList">Total List: 3</span>
                    </div>
                    <div id="customPagination" class="dataTables_paginate paging_simple_numbers"></div>
                    <input type="hidden" id="currentPage" value="1">
                    <div class="show-page">
                        <span>Show per page:</span>
                        <select id="pageLength" class="form-select">
                            <option value="5">5 </option>
                            <option value="10" selected>10 </option>
                            <option value="25">25</option>
                            <option value="-1">All</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div id="formDiv" style="display:none;">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box add">
                <h1 class="page-title">Add Driver</h1>
                <div class="add-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a id="tableDivLink" href="">Driver</a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Add Driver</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card com-franchise-info">
                <form id="driverForm" method="post">
                    <input type="hidden" id="hdDriverId" />
                    <div class="franchise-details">
                        <h2 class="page-form-title">
                            <a class="arrow-icon toggle-arrow"
                               data-bs-toggle="collapse"
                               href="#driverKycDetailsCollapse">
                                <i class="bi bi-dash-square"></i><span> Driver e-KYC Details </span>
                            </a>
                        </h2>
                        <div class="collapse show" id="driverKycDetailsCollapse">
                            <div class="all-custom-class">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="item-input">
                                            <label class="form-label">License No </label>
                                            <input type="text" class="form-control" placeholder="License Number" id="numLicenseNo" maxlength="15" onkeypress="return AllowAlphaNumericOnly(event)" oninput="this.value = this.value.toUpperCase()" />
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-lg-6 col-md-6">
                                        <div class="item-input">
                                            <label class="form-label">Date of Birth</label>
                                            <div class="kyc-input">
                                                <input type="date" class="form-control" id="txtDateOfBirth" />
                                                <button type="button" class="kyc-btn" id="licenseEKycButton">e-KYC</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="item-input">
                                            <label class="form-label"><span>*</span>Driver Name</label>
                                            <input type="text" class="form-control" placeholder="Driver Name AutoFetched" id="txtDriverName" />
                                        </div>
                                        <div class="item-input">
                                            <label class="form-label">DL Issue Date </label>
                                            <input type="date" class="form-control" id="txtDLIssueDate" />
                                        </div>
                                        <div class="item-input position-relative">
                                            <label class="form-label"><span>*</span>Address</label>
                                            <input id="from-search-box" type="text" class="form-control" placeholder="Address" autocomplete="off" />
                                            <ul id="from-location-suggestions" class="list-group" style="position: absolute; z-index: 1000; width: 100%; display: none;"></ul>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="item-input">
                                            <label class="form-label">Driver Code </label>
                                            <input type="text" class="form-control" id="txtDriverCode" maxlength="10" placeholder="Driver Code" onkeypress="return AllowAlphaNumericOnly(event)" disabled />
                                        </div>
                                        <div class="item-input">
                                            <label class="form-label">DL Expiry Date </label>
                                            <input type="date" class="form-control" id="txtDLExpiryDate" />
                                        </div>
                                        <div class="item-input">
                                            <label class="form-label">DL Issuing RTO</label>
                                            <input type="text" class="form-control" placeholder="DL Issuing RTO" id="txtDLIssuingRTO" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="file-upload-item">
                                            <label class="form-label">Upload Photo <span>*</span></label>
                                            <div class="dropzone" id="dropzone">
                                                <div class="dz-message needsclick">
                                                    <i class="ri-upload-cloud-2-fill"></i>
                                                    <h5>Drag & Drop your files here</h5>
                                                    <strong>OR</strong>
                                                    <span>Browse files</span>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="text" hidden id="txtUploadedPhoto" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="franchise-details">
                        <div class="all-custom-class">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="item-input">
                                        <label class="form-label">Driver Type <span>*</span></label>
                                        <select id="ddlDriverType" class="select2-custom form-control" style="width: 100%;"></select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="item-input">
                                        <label class="form-label">WhatsApp Number</label>
                                        <input type="tel" class="form-control phone-input" placeholder="+1 (555) 000-0000" id="numWhatsapp" onkeypress="return isNumber(event)" maxlength="10" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="item-input">
                                        <label class="form-label">City <span>*</span></label>
                                        <select id="ddlCity" class="select2-custom form-control" style="width: 100%;"></select>
                                    </div>
                                    <div class="item-input">
                                        <label class="form-label">Mobile Number </label>
                                        <input type="tel" class="form-control phone-input" placeholder="+1 (555) 000-0000" id="numMobile" onkeypress="return isNumber(event)" maxlength="10" />
                                    </div>
                                    @* <div class="item-input"> *@
                                    @*     <ul class="profile-check-box"> *@
                                    @*         <li> *@
                                    @*             <label class="check-box-custom"> *@
                                    @*                 <input class="form-check-input" type="checkbox" value="" name="user_view" id="createlogin"> *@
                                    @*                 <span class="checkmark"></span> *@
                                    @*                 <span class="form-check-label"> *@
                                    @*                     Create User *@
                                    @*                 </span> *@
                                    @*             </label> *@
                                    @*         </li> *@
                                    @*     </ul> *@
                                    @* </div> *@
                                </div>

                                <div class="col-lg-6">
                                    <div class="item-input">
                                        <label class="form-label">Pincode</label>
                                        <input type="text" class="form-control" placeholder="Pincode" id="numPincode" onkeypress="return isNumber(event)" />
                                    </div>
                                    <div class="item-input">
                                        <label class="form-label">Verified On</label>
                                        <input type="text" class="form-control" placeholder="AutoFetched" id="txtVerifiedOn" disabled />
                                    </div>
                                    @* <div class="item-input"> *@
                                    @*     <ul class="profile-check-box"> *@
                                    @*         <li> *@
                                    @*             <label class="check-box-custom"> *@
                                    @*                 <input class="form-check-input" type="checkbox" value="" name="user_view" id="shareapplink"> *@
                                    @*                 <span class="checkmark"></span> *@
                                    @*                 <span class="form-check-label"> *@
                                    @*                     Share App Link *@
                                    @*                 </span> *@
                                    @*             </label> *@
                                    @*         </li> *@
                                    @*     </ul> *@
                                    @* </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                    @await Html.PartialAsync("~/Views/Partials/_AttachmentDetails.cshtml")

                    <div class="button-main">
                        <a href="#" class="card-link" type="button" data-action="save" id="btnSaveDriver"><i class="ri-save-line"></i><span>Save</span></a>
                        <a href="#" class="card-link" type="button" data-action="saveNew" id="btnSaveNewDriver"><i class="ri-save-line"></i><span>Save & New</span></a>
                        <a href="#" class="card-link" type="button" data-action="update" id="btnUpdateDriver" style="display:none;margin-left:0px;"><i class="ri-save-line"></i><span>Update</span></a>
                        <a href="#" class="card-link" type="button"  id="btnCancel"><i class="ri-close-line"></i><span>Cancel</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>