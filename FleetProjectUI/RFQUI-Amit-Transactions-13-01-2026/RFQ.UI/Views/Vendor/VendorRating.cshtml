@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Vendor Rating";
    bool IsAdd = (bool)ViewData["IsAdd"];
    bool IsEdit = (bool)ViewData["IsEdit"];
    bool IsView = (bool)ViewData["IsView"];
    bool IsCancel = (bool)ViewData["IsCancel"];
}
@section Scripts {
    <script>
        var IsAdd = @IsAdd.ToString().ToLower();
        var IsEdit = @IsEdit.ToString().ToLower();
        var IsView = @IsView.ToString().ToLower();
        var IsCancel = @IsCancel.ToString().ToLower();
    </script>
    <script src="~/js/Views/VendorRating.js"></script>
}



<div class="row">
    <div class="col-12">
        <div class="page-title-box add">
            <h1 class="page-title">Vendor Rating </h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card com-franchise-info">
            <form class="form" id="vendorRatingForm" method="post">
                <input type="hidden" id="txtvendorRatingId" />
                <div class="franchise-details">
                    <div class="row all-custom-class">
                        <div class="col-lg-6">
                            <div class="item-input">
                                <label class="form-label">Vendor Name</label>
                                <select class="select2-custom form-control" data-control="select2" id="ddlVendor" style="width: 100%;">
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">PAN No</label>
                                <input type="text" class="form-control" placeholder="xxxxxxxxxx" id="txtPanNumber" maxlength="10" onkeypress="return AllowAlphaNumericOnly(event)" disabled />
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="item-input">
                                <label class="form-label">Vendor Category</label>
                                <input type="text" class="form-control" placeholder="Auto Display" id="txtVendorCategory" disabled />
                                </select>
                            </div>
                        </div>

                        <div class="card mt-5">
                            <div class="card-header border-0 cursor-pointer">
                                <div class="card-title m-0">
                                    <h3 class="fw-bold m-0">Vendor Rating</h3>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table align-middle table-bordered">
                                        <tbody align="center" id="tableDiv">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <label class="form-label">Any Other Comments</label>
                            <input type="text" class="form-control" placeholder="Text" />
                        </div>

                    </div>
                </div>

                <div class="button-main">
                    <a href="#" class="card-link" id="btnSaveCompanyType" type="button" data-action="save">
                        <i class="ri-save-line"></i>
                        <span>
                            Save
                        </span>

                    </a>

                    <a href="#" class="card-link" id="btnsaveandnew" data-action="saveNew">
                        <i class="ri-save-line"></i>
                        <span>
                            Save & New
                        </span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

