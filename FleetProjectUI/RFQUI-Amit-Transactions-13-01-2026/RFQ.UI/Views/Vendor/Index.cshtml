    <div class="row">
        <div class="col-12">
            <div class="card com-franchise-info">
                <form id="vendorForm" method="post" class="">
                    <input type="hidden" id="hdnPartyId" />

                    <div class="franchise-details">
                        <h2 class="page-form-title d-flex align-items-center gap-2">
                            <a class="arrow-icon toggle-arrow"
                               data-bs-toggle="collapse"
                               href="#gstKycDetailsCollapse">
                                <i class="bi bi-dash-square"></i><span> GST e-KYC Details </span>
                            </a>
                        </h2>
                        <div class="collapse" id="gstKycDetailsCollapse">
                            <div class="row all-custom-class">
                                <div class="col-xl-4 col-lg-6 col-md-6">
                                    <div class="item-input">
                                        <div class="item-input">
                                            <label class="form-label">GST No</label>
                                            <div class="kyc-input">
                                                <input oninput="this.value = this.value.toUpperCase()" type="text" class="form-control" id="txtGstNumber" maxlength="15" placeholder="Enter GST No" onkeypress="return AllowAlphaNumericOnly(event)" />
                                                <button class="kyc-btn" type="button" id="gstEKycButton">e-KYC</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-8 col-lg-6 col-md-6">
                                    <div class="item-input">
                                        <label class="form-label">Legal Name</label>
                                        <input type="text" class="form-control" placeholder="Enter Legal Name" id="txtLegalName" disabled />
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">Type of Business</label>
                                        <input type="text" class="form-control " placeholder="Type of Business" id="txtTypeBusiness" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="item-input">
                                        <label class="form-label">Trade Name</label>
                                        <input type="text" class="form-control" placeholder="Enter Trade Name" id="txtTradeName" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">Aadhar Verified</label>
                                        <input type="text" class="form-control" placeholder="Aadhar Verified" id="txtAadharVerified" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">Verified GST No <span>*</span></label>
                                        <input type="text" class="form-control" placeholder="Verified GST No" id="txtVerifiedGstNo" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">GST Verified On</label>
                                        <input type="date" class="form-control" placeholder="GST Verified On" id="txtGstVerifiedOn" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">GST Status</label>
                                        <input type="text" class="form-control" placeholder="GST Status" id="txtGstStatus" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="item-input">
                                        <label class="form-label">GST Address</label>
                                        <input type="text" class="form-control" placeholder="GST Address" id="txtGstAddress" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="franchise-owner-details">
                        <h2 class="page-form-title d-flex align-items-center gap-2">
                            <a class="arrow-icon toggle-arrow"
                               data-bs-toggle="collapse"
                               href="#panKycDetailsCollapse">
                                <i class="bi bi-dash-square"></i><span> PAN e-KYC Details </span>
                            </a>
                        </h2>
                        <div class="collapse" id="panKycDetailsCollapse">
                            <div class="row all-custom-class">
                                <div class="col-xl-4 col-lg-6 col-md-6">
                                    <div class="item-input">
                                        <div class="item-input">
                                            <label class="form-label">PAN No</label>
                                            <div class="kyc-input">
                                                <input oninput="this.value = this.value.toUpperCase()" type="text" class="form-control" id="txtPanNumber" maxlength="10" placeholder="Enter PAN No" onkeypress="return AllowAlphaNumericOnly(event)" />
                                                <button class="kyc-btn" type="button" id="panEKycButton">e-KYC</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-8 col-lg-6 col-md-6">
                                    <div class="item-input">
                                        <label class="form-label">Name as per PAN</label>
                                        <input type="text" class="form-control " id="txtPanName" placeholder="Name as per PAN" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">Aadhar Linked</label>
                                        <input type="text" class="form-control" placeholder="Aadhar Linked" id="txtAadharLinked" disabled />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">PAN Verified On</label>
                                        <input type="date" class="form-control" placeholder="PAN Verified On" id="txtPanVerifiedOn" disabled />

                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="item-input">
                                        <label class="form-label">PAN Status</label>
                                        <input type="text" class="form-control" placeholder="PAN Status" id="txtPanStatus" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="franchise-owner-details">
                        <div class="row all-custom-class">
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Vendor Name <span>*</span></label>
                                    <input type="text" class="form-control" placeholder="Vendor Name" id="txtVendorName" maxlength="150" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Vendor Category <span>*</span></label>
                                    <select class="select2-custom form-control" aria-label="Select a Vendor Category" id="ddlVendorCategory" style="width: 100%;">
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="item-input">
                                    <label class="form-label">Address <span>*</span></label>
                                    <input id="from-search-box" type="text" class="form-control" placeholder="Search location" autocomplete="off" maxlength="200" />
                                    <ul id="from-location-suggestions" class="list-group" style="position: absolute; z-index: 1000; width: 95%; display: none;"></ul>
                                    <input type="hidden" id="fromLat">
                                    <input type="hidden" id="fromLng">
                                    <input type="hidden" id="fromState">
                                    <input type="hidden" id="fromCity">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">City <span>*</span></label>
                                    <select class="select2-custom form-control" id="ddlCity" name="vendor" aria-label="Select a City" data-live-search="true" style="width: 100%;">
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Pincode <span>*</span></label>
                                    <input type="text" class="form-control" placeholder="Pincode" id="txtPinCode" onkeypress="return isNumber(event)" maxlength="6" />
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Contact Person</label>
                                    <input type="text" class="form-control" placeholder="Enter Contact Person" id="txtContactPerson" maxlength="50" onkeypress="return isAlphabets(event)" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" placeholder=" Enter Email ID" id="txtEmailId" maxlength="50" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Mobile Number</label>
                                    <input type="tel" class="form-control phone-input" placeholder="+1 (555) 000-0000" id="txtMobileNumber" maxlength="10" onkeypress="return isNumber(event)" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">WhatsApp Number <span>*</span></label>
                                    <input type="tel" class="form-control phone-input" placeholder="+1 (555) 000-0000" id="txtWhatsappNumber" onkeypress="return isNumber(event)" maxlength="10" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Pan Number <span>*</span></label>
                                    <input type="text" class="form-control" placeholder="xxxxxxxxxx" id="numPanNumber" maxlength="10" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">GST Number</label>
                                    <input type="text" class="form-control" placeholder="xxxxx-xxxxx-xxxxx" id="numGstNumber" maxlength="15" />
                                </div>
                            </div>
