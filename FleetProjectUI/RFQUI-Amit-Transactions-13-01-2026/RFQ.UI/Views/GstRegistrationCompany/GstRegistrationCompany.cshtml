@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "GST Registration – Company";
    bool IsAdd = (bool)ViewData["IsAdd"];
	bool IsEdit = (bool)ViewData["IsEdit"];
	bool IsView = (bool)ViewData["IsView"];
	bool IsCancel = (bool)ViewData["IsCancel"];

}

@section Scripts {
    <script>
        var IsAdd = @IsAdd.ToString().ToLower();
        var IsEdit = @IsEdit.ToString().ToLower();
        var IsView = @IsView.ToString().ToLower();
        var IsCancel = @IsCancel.ToString().ToLower();
    </script>
}

<div id="formDiv">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box add">
                <h1 class="page-title">GST Registration – Company</h1>

                <div class="add-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" id="tableDivLink">GST Registration – Company</a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Add GST Registration – Company</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card com-franchise-info">
                <form class="form" id="changeTypeForm" method="post">
                    <input type="hidden" id="txtChangeId" />
                    <div class="franchise-details">
                        <h2 class="page-form-title">GST Registration – Company Details</h2>
                        <div class="row all-custom-class">

                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">Company Name </label>
                                    <input type="password" class="form-control" placeholder="Auto Display" maxlength="100" disabled id="txtCompanyName" />
                                </div>
                            </div>


                            <div class="col-lg-6">
                                <div class="item-input">
                                    <label class="form-label">PAN No </label>
                                    <input type="password" class="form-control" placeholder="Auto Display" maxlength="100" onkeypress="return AllowAlphaNumericOnly(event)"  disabled id="txtPanNo" />
                                </div>
                            </div>


                            <div class="col-lg-12">
                                <div class="item-input">
                                    <label class="form-label">Address </label>
                                    <input type="password" class="form-control" placeholder="Auto Display" maxlength="100" disabled id="txtAddress" />
                                </div>
                            </div>


                        </div>
                    </div>

                    <div class="button-main">
                        <a href="#" class="card-link" id="btnSaveChangeType" type="button" data-action="save">
                            <i class="ri-save-line"></i>
                            <span>
                                Save
                            </span>

                        </a>
                        <a href="#" class="card-link" id="btnsaveandnew" data-action="saveNew">
                            <i class="ri-save-line"></i>
                            <span>
                                Save & New
                            </span>
                        </a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>